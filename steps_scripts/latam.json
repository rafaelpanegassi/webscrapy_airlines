{
    "description": "Configuration for LATAM Airlines Brazil Web Crawler",
    "script": {
        "before": {
            "step-b1-navigate-home": {
                "action": "goto",
                "att": "https://www.latamairlines.com/br/pt"
            },
            "step-b2-accept-cookies": {
                "action": "click_element",
                "att": {
                    "element": "//button[@id='cookies-politics-button']"
                }
            },
            "step-b3-wait-after-cookies": {
                "action": "wait",
                "att": 3
            }
        },
        "main": {
            "step-m1-search-flights": {
                "action": "goto",
                "att": "https://www.latamairlines.com/br/pt/oferta-voos?origin={{origin}}&destination={{destination}}&outbound={{departure_date}}T00%3A00%3A00.000Z&inbound={{return_date}}T00%3A00%3A00.000Z&adt=1&chd=0&inf=0&trip=RT&cabin=Economy&redemption=false&sort=RECOMMENDED"
            },
            "step-m2-wait-for-results": {
                "action": "wait",
                "att": 10
            }
        },
        "after": {}
    },
    "tag": {
        "result_group": {
            "tag": "//ol[@aria-label='Voos dispon√≠veis.']/li[contains(@class, 'ListItemAvailableFlights') or contains(@class,'bodyFlightsstyle__ListItemAvailableFlights')]",
            "items": {
                "tag": ".",
                "elements": {
                    "airline_logo_alt": {
                        "tag": ".//div[contains(@class, 'CarrierLogoComponent') or contains(@class, 'carrierlogostyles__CarrierLogo')]//img/@alt"
                    },
                    "departure_time": {
                        "tag": "(.//div[contains(@class, 'flightInfostyles__ContainerFlightInfo') or contains(@class, 'flight-information')])[1]//time/text()"
                    },
                    "departure_airport_code": {
                        "tag": "(.//div[contains(@class, 'flightInfostyles__ContainerFlightInfo') or contains(@class, 'flight-information')])[1]//abbr[contains(@class, 'iataCode') or contains(@class, 'IATACode')]/text()"
                    },
                    "arrival_time": {
                        "tag": "(.//div[contains(@class, 'flightInfostyles__ContainerFlightInfo') or contains(@class, 'flight-information')])[2]//time/text()"
                    },
                    "arrival_airport_code": {
                        "tag": "(.//div[contains(@class, 'flightInfostyles__ContainerFlightInfo') or contains(@class, 'flight-information')])[2]//abbr[contains(@class, 'iataCode') or contains(@class, 'IATACode')]/text()"
                    },
                    "duration": {
                        "tag": ".//span[contains(@class, 'flightDuration') or (contains(@class, 'latam-typography') and (contains(., 'h') or contains(., 'm')))]/text()"
                    },
                    "stops_info": {
                        "tag": ".//a[contains(@class, 'stopsButton') or contains(@class, 'sc-jsJBEP')]//span/text()"
                    },
                    "flight_price": {
                        "tag": "(.//span[contains(@class, 'Price vanligtyle__PriceAmount') or contains(@class, 'displayCurrencystyle__CurrencyAmount')])[1]/text()"
                    }
                }
            }
        }
    }
}